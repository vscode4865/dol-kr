		<</if>>
	<</if>>
<<elseif $location is "lake_ruin" or $bus is "lakedepths" or $bus is "lakeshallows">>
	<<if $bus is "lakeshallows" or $bus is "lakedepths">>
		<<set $location to "lake_ruin">>
